{% import './components/image.twig' as Image %}
{% import './components/button.twig' as Button %}
{% extends "base.twig" %}

{% block content %}
	<section class="{{field.title}}-page padding" id="{{field.title}}-page">
		<div class="container">
			<div class="wrapper">
				<div class="full-contact-details">					
					<div class="drop-us-a-line">
						<h2 class="h4">Drop us a line</h2>
						<p class="address">{{ options.address }}</p>
						{% set myEmail = options.email_address %}
						{% include 'partials/email.twig' %}
						<a href="tel:{{ options.phone_number }}" aria-label="Phone us at {{options.phone_number}}">
							{% set phoneNumber = options.phone_number %}
							{% include 'partials/phone-number.twig' %}
						</a>
					</div>
                    <div class="connect-with-us">
						<h2 class="h4">Connect with us</h2>
						{% include 'partials/social-media.twig' %}
					</div>
				</div>
				<div class="contact-form-details">
                    <h2>We'd love to hear from you!</h2>
					{{fn('do_shortcode','[contact-form-7 id="ecdb74f" title="Contact Us"]')}}
				</div>
			</div>
		</div>
	</section>

{% endblock %}
